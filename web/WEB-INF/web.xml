<?xml version="1.0" encoding="UTF-8"?>

<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">
    
    <servlet>
        <servlet-name>CheckNumber</servlet-name>
        <servlet-class>pl.polsl.lab.servlet.CheckNumber</servlet-class>
        <init-param>
            <param-name>driver</param-name>
            <param-value>org.apache.derby.jdbc.ClientDriver</param-value>
        </init-param>
        <init-param>
            <param-name>url</param-name>
            <param-value>jdbc:derby://localhost:1527/PrimeNumbersDatabse</param-value>
        </init-param>
        <init-param>
            <param-name>user</param-name>
            <param-value>username</param-value>
        </init-param>
        <init-param>
            <param-name>password</param-name>
            <param-value>password</param-value>
        </init-param>
    </servlet>
    <servlet>
        <servlet-name>PrimeNumInRange</servlet-name>
        <servlet-class>pl.polsl.lab.servlet.PrimeNumInRange</servlet-class>
        <init-param>
            <param-name>driver</param-name>
            <param-value>org.apache.derby.jdbc.ClientDriver</param-value>
        </init-param>
        <init-param>
            <param-name>url</param-name>
            <param-value>jdbc:derby://localhost:1527/PrimeNumbersDatabse</param-value>
        </init-param>
        <init-param>
            <param-name>user</param-name>
            <param-value>username</param-value>
        </init-param>
        <init-param>
            <param-name>password</param-name>
            <param-value>password</param-value>
        </init-param>
    </servlet>
    <servlet>
        <servlet-name>NthPrimeNum</servlet-name>
        <servlet-class>pl.polsl.lab.servlet.NthPrimeNum</servlet-class>
        <init-param>
            <param-name>driver</param-name>
            <param-value>org.apache.derby.jdbc.ClientDriver</param-value>
        </init-param>
        <init-param>
            <param-name>url</param-name>
            <param-value>jdbc:derby://localhost:1527/PrimeNumbersDatabse</param-value>
        </init-param>
        <init-param>
            <param-name>user</param-name>
            <param-value>username</param-value>
        </init-param>
        <init-param>
            <param-name>password</param-name>
            <param-value>password</param-value>
        </init-param>
    </servlet>
    <servlet>
        <servlet-name>HistoryCalculate</servlet-name>
        <servlet-class>pl.polsl.lab.servlet.HistoryCalculate</servlet-class>
        <init-param>
            <param-name>driver</param-name>
            <param-value>org.apache.derby.jdbc.ClientDriver</param-value>
        </init-param>
        <init-param>
            <param-name>url</param-name>
            <param-value>jdbc:derby://localhost:1527/PrimeNumbersDatabse</param-value>
        </init-param>
        <init-param>
            <param-name>user</param-name>
            <param-value>username</param-value>
        </init-param>
        <init-param>
            <param-name>password</param-name>
            <param-value>password</param-value>
        </init-param>
    </servlet>
    <servlet-mapping>
        <servlet-name>CheckNumber</servlet-name>
        <url-pattern>/CheckNumber</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>HistoryCalculate</servlet-name>
        <url-pattern>/HistoryCalculate</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>PrimeNumInRange</servlet-name>
        <url-pattern>/PrimeNumInRange</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>NthPrimeNum</servlet-name>
        <url-pattern>/NthPrimeNum</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
